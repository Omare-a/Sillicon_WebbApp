@model SubscribeModel


<section id="subscribe">
    <div class="container">
        <div class="title">
            <h1>Don't Want to Miss Anything?</h1>
            <img src="~/images/arrows.svg" alt="">
        </div>
        <form method="post" asp-action="Subscribe" asp-controller="Default">
            <div class="sing-up">
                <h5>Sign up for Newsletters</h5>
                </div>
            </div>

                    <i class="fa-regular fa-envelope"></i>
                    <input asp-for="Email">
                </div>
                <button type="submit" class="btn btn-theme">Subscribe *</button>
                <a class="btn-theme-s" href="#">Learn more<i class="fa-regular fa-arrow-right"></i></a>
            </div>
            @if (!string.IsNullOrEmpty(TempData["StatusMassage"]?.ToString()))
            {
                <span class="status-massage">@TempData["StatusMassage"]</span>
            }
            else
            {
                <span class="status-massage">* Yes, I agree to the <a href="">terms</a> and <a href="">privacy policy.</a></span>
            }
        </form>
    </div>
</section>


