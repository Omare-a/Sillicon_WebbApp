@{
    var user = await UserManager.GetUserAsync(User);
}
<header>
    <div class="container">
        <a id="logo" asp-controller="Home" asp-action="Default"><img src="~/images/solid.svg" alt=""></a>
        <div id="menu" class="hide">
            <nav>
                <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="overview">Overview</a>
                <a class="menu-link" asp-controller="Default" asp-action="Home" asp-fragment="features">Features</a>
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="menu-link" asp-controller="Course" asp-action="Index">Courses</a>

                }
                <a class="menu-link" asp-controller="Contact" asp-action="Index">Contact</a>

            </nav>
        </div>

        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode">
                <div class="slider round"></div>
            </label>
            <label>Dark</label>
        </div>


        <div id="account-buttons" class="hide">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="profile">
                    <div class=" profile-img">
                        <a asp-action="Details" asp-controller="Account">
                            <img src="~/images/uploads/profiles/@user!.ProfileImage">
                        </a>
                    </div>
                </div>
            }
            else
            {
                <a class="btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-regular fa-right-to-bracket"></i><span>Sign in</span></a>
                <a class="btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i><span>Sign up</span></a>
            }
            
        </div>

       
    </div>

</header>